package about

import (
	"github.com/alejandrobyrne/website/views/layout"
)

templ Index() {
	@layout.Base("About Me | Alejandro Byrne") {
		<div class="max-w-4xl mx-auto py-12">
			
			// HERO SECTION
			<div class="mb-12 border-b-2 border-black pb-8">
				<h1 class="text-3xl font-bold mb-4 uppercase tracking-widest">Profile: Alejandro Byrne</h1>
				<p class="text-lg italic font-serif">
					"We are what we repeatedly do. Excellence, then, is not an act, but a habit." â€” Aristotle
				</p>
			</div>

			// MAIN GRID
			<div class="grid md:grid-cols-3 gap-8">
				
				// COLUMN 1: THE ENGINEER (Technical)
				<div class="space-y-4">
					<div class="p-4 border-2 border-black h-full">
						<h2 class="font-bold text-lg mb-4 uppercase border-b-2 border-black pb-2">
							I. The Engineer
						</h2>
						<p class="text-sm mb-4 leading-snug">
							CS Senior at UT Austin (Class of '26). Focused on building resilient, full-stack systems.
						</p>
						
